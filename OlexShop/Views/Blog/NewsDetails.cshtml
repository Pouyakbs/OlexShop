                        </div>

                        <div class="side-bar-widget">
                            <h3 class="title">پست‌های اخیر</h3>
                            <div class="widget-popular-post">
                                @foreach (var item in Model.News)
                                {
                    <article class="item">
                        <a href="~/Blog/NewsDetails/@item.NewsId" class="thumb">
                            <img src="~/Images/NewsImages/@item.NewsImages" class="full-image cover bg1" role="img">
                        </a>
                        <div class="info">
                            <h4 class="title-text">
                                <a href="~/Blog/NewsDetails/@item.NewsId">
                                    @item.NewsTitle
                                </a>
                            </h4>
                            <p>@item.PubDate</p>
                        </div>
                    </article>}
                            </div>
                        </div>

                        <div class="side-bar-widget">
                            <h3 class="title">همه دسته‌بندی‌ها</h3>
                            <div class="side-bar-categories">
