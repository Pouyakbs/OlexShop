                        </li>}
                                </ul>
                            </div>
                        </div>

                        <div class="side-bar-widget">
                            <h3 class="title">برچسب‌ها</h3>
                            <ul class="side-bar-widget-tag">
                                @foreach (var item in Model.Categories)
                                {
                    <li><a href="/Blog/?categoryId=@item.CategoryId">@item.CategoryName</a></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="col-lg-8">
                    <div class="blog-article">
                        <div class="blog-article-img">
                            <img src="~/images/NewsImages/@Model.NewsDTO.NewsImages" alt="Images">
                        </div>

                        <div class="blog-article-title">
                            <h2>@Model.NewsDTO.NewsTitle</h2>
                            <ul>
                                <li><i class='bx bx-time'></i>  @Model.NewsDTO.PubDate</li>
                            </ul>
                        </div>

                        <div class="article-content">
                            <blockquote class="blockquote">
                                <p>
                                    @Model.NewsDTO.NewsSummary
                                </p>
                            </blockquote>
                            <p>
                                @Model.NewsDTO.NewsText
                            </p>
                        </div>
                        <div class="comments-wrap">
                            <div class="comment-title">
                                <h3 class="title">نظرات</h3>
                                <ul class="social-icon">
                                    <li>اشتراک پست:</li>
                                    <li>
                                        <a href="#">
                                            <i class="bx bxl-facebook"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="bx bxl-twitter"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class='bx bxl-google-plus'></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="bx bxl-linkedin"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>

                            <ul class="comment-form">
                                <li>
                                    @foreach (var item in Model.Comments)
                                    {
                                    <h3>@item.Name</h3>
                                    <span><i class='bx bx-calendar-event'></i>  @item.PubTime </span>
                                    <p>
                                        @item.CommentText
                                    </p>
                                    <div class="content">
                                        <h4><a href="#"> لایک</a></h4>
                                    </div>
                                    }
                                    
                                </li>
                            </ul>
                        </div>

                        <div class="comments-form">
                            <h3 class="title">نظر بدهید</h3>
                            <div class="contact-form">
                                <form method="post" asp-action="NewsDetails" asp-controller="Blog">
                                    <div class="row">
                                        <div class="col-lg-6 col-sm-6">
                                            <div class="form-group">
                                                <input type="text" asp-for="newsComment.Name" name="Name" id="Name" class="form-control" required data-error="لطفا نام خود را وارد نمایید" placeholder="نام">
                                            </div>
                                        </div>

                                        <div class="col-lg-6 col-sm-6">
                                            <div class="form-group">
                                                <input type="email" asp-for="newsComment.Email" name="Email" id="Email" class="form-control" required data-error="لطفا ایمیل خود را وارد کنید" placeholder="ایمیل">
                                            </div>
                                        </div>

                                        <div class="col-lg-12 col-sm-12">
                                            <div class="form-group">
                                                <input type="text" name="websit" class="form-control" data-error="وب سایت شما" placeholder="وب سایت شما">
                                            </div>
                                        </div>

                                        <div class="col-lg-12 col-md-12">
                                            <div class="form-group">
                                                <textarea asp-for="newsComment.CommentText" name="CommentText" class="form-control" id="CommentText" cols="30" rows="8" required data-error="پیام خود را بنویسید" placeholder="پیام شما"></textarea>
                                            </div>
                                        </div>

                                        <div class="col-lg-12 col-md-12">
                                            <div class="form-group checkbox-option">
                                                <input type="checkbox" id="chb2">
                                                <p>
                                                    نام ، ایمیل و وب سایت من را برای دفعه بعدی که نظر می دهم در این مرورگر ذخیره کنید.
                                                </p>
                                            </div>
                                        </div>

                                        <div class="col-lg-12 col-md-12">
                                            <input type="hidden" name="NewsId" value="@Model.NewsDTO.NewsId" />
                                            <button type="submit" value="submit" class="default-btn btn-bg-three">
                                                نظر دادن
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
